{
  "name": "reeper",
  "private": true,
  "dependencies": {
    "@fontsource/noto-sans": "^5.2.10",
    "@fortawesome/fontawesome-free": "^7.1.0",
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/stimulus-webpack-helpers": "^1.0.1",
    "@rails/actiontext": "^8.1",
    "@rails/activestorage": "^8.1",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "lodash": "^4.17.23",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.1",
    "postcss-url": "^10.1.3",
    "tailwindcss": "^4.1.17",
    "trix": "^2.1.16",
    "turbolinks": "^5.2.0"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  },
  "scripts": {
    "copy:fonts": "copyfiles -f node_modules/@fortawesome/fontawesome-free/webfonts/* node_modules/@fontsource/noto-sans/files/* public/webfonts && copyfiles -f node_modules/@fortawesome/fontawesome-free/webfonts/* node_modules/@fontsource/noto-sans/files/* app/assets/builds/webfonts",
    "build:css": "yarn copy:fonts && postcss ./app/assets/stylesheets/application.postcss.css -o ./app/assets/builds/application.css",
    "build": "webpack --config webpack.config.js"
  }
}
