  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "scripts": {
    "copy:fonts": "copyfiles -f node_modules/@fortawesome/fontawesome-free/webfonts/* public/webfonts && copyfiles -f node_modules/@fortawesome/fontawesome-free/webfonts/* app/assets/builds/webfonts",
