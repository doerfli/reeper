<div class="field is-grouped is-grouped-multiline">
  <% @tags.each do |t| %>
    <div class="control">
      <a class="tags has-addons" href="<%= filter_by_tag_recipes_path(:tagid => t.id) %>">
        <span class="tag is-dark"><%= t.name %></span>
        <span class="tag is-info"><%= t.recipes_count %></span>
      </a>
    </div>
  <% end %>
</div>