<div class="container">
  <h1 class="title">
    <%=t 'recipes.title' %>
  </h1>
  <div data-controller="search" data-search-url="<%= search_recipes_path %>">
    <div class="field">
      <p class="control has-icons-left">
        <%= text_field_tag :search, nil, class: 'input', placeholder: t('action.search'), autocomplete: 'off',
            'data-action': 'keyup->search#search', 
            'data-target': 'search.term' %>
        <span class="icon is-small is-left">
          <i class="fas fa-search"></i>
        </span>
      </p>
    </div>
    <div class="recipes" data-target="search.list">
      <%= render partial: 'list' %>
    </div>
  </div>
</div>
