<div class="container">
  <h1 class="title">
    Rezept erfassen
  </h1>
  <div class="new_recipe" data-controller="recipeimages">
    <%= form_for @recipe, url: {action: "create"} do |f| %>
      <div class="add_image" data-action="click->recipeimages#add">
        <i class="fas fa-camera fa-3x"></i>
      </div>
      <div class="field">
        <%= f.label :name, class: 'label' %>
        <div class="control">
          <%= f.text_field :name, class: 'input', placeholder: 'Wie heisst das Rezept?' %>
        </div>
      </div>
      <div class="field">
        <%= f.label :ingredients, class: 'label' %>
        <div class="control">
          <%= f.text_area :ingredients, class: 'textarea', placeholder: 'Liste der Zutaten' %>
        </div>
      </div>
      <div class="field">
        <%= f.label :instructions, class: 'label' %>
        <div class="control">
          <%= f.text_area :instructions, class: 'textarea', placeholder: 'Herstellungsschritte' %>
        </div>
      </div>
      <div data-target="recipeimages.images">

      </div>
      <div class="field">
        <%= f.label :duration, class: 'label' %>
        <div class="control">
          <%= f.number_field :duration, class: 'input', placeholder: 'Dauer der Zubereitung (Minuten)' %>
        </div>
      </div>
      <div class="field">
        <%= f.label :tags, class: 'label' %>
        <div class="control">
          <%= f.text_field :tag_names, class: 'input', placeholder: 'Tags' %>
        </div>
      </div>
      <div class="field is-grouped">
        <div class="control">
          <%= f.button 'Speichern', class: 'button is-link' %>
        </div>
      </div>
      <div class="field display_none image_upload" data-target="recipeimages.appendimgtmpl">
        <%= f.label :images, class: 'label' %>
        <div class="control">
          <%= f.file_field 'images', accept: 'image/*', multiple: true, class: 'input', placeholder: 'Bild hinzufuegen', disabled: true %>
        </div>
      </div>
    <% end %>
  </div>
</div>
