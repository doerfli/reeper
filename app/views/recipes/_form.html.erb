<div class="recipe noSubmitOnEnter mt-4" data-controller="recipeform" data-recipeform-url="<%= search_tags_path(term: 'term', format: :json) %>">
  <%= form_for @recipe do |f| %>
    <div class="mb-4">
      <div class="mb-2">
        <%= f.label :name %>
      </div>
      <div>
        <%= f.text_field :name, placeholder: t('recipes.form.placeholder.name') %>
      </div>
    </div>
    <div class="mb-4">
      <div class="mb-2">
        <%= f.label :ingredients %>
      </div>
      <div>
        <%= f.rich_text_area :ingredients, placeholder: t('recipes.form.placeholder.ingredients') %>
      </div>
    </div>
    <div class="mb-4">
      <div class="mb-2">
        <%= f.label :instructions %>
      </div>
      <div>
        <%= f.rich_text_area :instructions, placeholder: t('recipes.form.placeholder.instructions') %>
      </div>
    </div>
    <div class="mb-4">
      <div class="mb-2">
        <%= f.label :duration %>
      </div>
      <div>
        <%= f.number_field :duration, placeholder: t('recipes.form.placeholder.duration'), autocomplete: 'off' %>
      </div>
    </div>
    <div class="mb-4">
      <div class="mb-2">
        <%= f.label :rating %>
      </div>
      <div>
        <%= f.hidden_field :rating, 'data-recipeform-target': 'rating' %>
        <% 5.times do |i| %>
          <% cls = if !@recipe.rating.nil? && i < @recipe.rating then 'fas' else 'far' end  %>
          <i class="<%= cls %> fa-star" 
              data-recipeform-target="rating-<%= i+1 %>"
              data-action="click->recipeform#setrating"
              data-recipeform-rating-param="<%= i+1 %>"></i>
        <% end %>
      </div>
    </div>
    <div class="mb-4">
      <div class="mb-2">
        <%= f.label :tags %>
      </div>
      <div>
        <%= f.text_field :tag_names, placeholder: t('recipes.form.placeholder.tags'), 'data-action': 'keyup->recipeform#findtags', 'data-recipeform-target': 'tags', autocomplete: 'off'  %>
      </div>
      <div data-recipeform-target="tagsSuggestion" class="tagsSuggestion">
      </div>
      <% if defined?(@suggested_tags) && @suggested_tags.present? %>
        <div class="mt-2">
          <div class="text-sm text-gray-600 mb-1"><%= t('recipes.form.ai_suggested_tags') %></div>
          <div class="flex flex-wrap gap-2">
            <% @suggested_tags.each do |tag| %>
              <button type="button"
                      class="px-3 py-1 bg-blue-100 hover:bg-blue-200 text-blue-800 rounded-full text-sm cursor-pointer transition-all duration-200 ai-suggested-tag"
                      data-action="click->recipeform#addSuggestedTag"
                      data-tag-value="<%= tag %>">
                <%= tag %>
              </button>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="mb-4">
      <div class="mb-2">
        <%= f.label :source %>
      </div>
      <div>
        <%= f.text_field :source, placeholder: t('recipes.form.placeholder.source'), autocomplete: 'off' %>
      </div>
    </div>
    <% if @recipe.ocr_text.present? %>
      <div class="mb-4">
        <div class="mb-2">
          <%= f.label :ocr_text, t('recipes.form.ocr_text') %>
        </div>
        <div>
          <%= f.text_area :ocr_text, 
                rows: 10, 
                class: 'textarea w-full',
                placeholder: t('recipes.form.placeholder.ocr_text') %>
        </div>
        <div class="text-sm text-gray-600 mt-1">
          <%= t('recipes.form.ocr_text_help') %>
        </div>
      </div>
    <% end %>
    <%= hidden_field_tag :ocrresult_id, @ocrresult.id if @ocrresult.present? %>
    <div class="mb-4">
      <div class="flex gap-2">
        <%= f.button t('action.save'), class: 'button' %>
        <% if @recipe.persisted? %>
          <%= link_to t('action.cancel'), recipe_path(@recipe), class: 'button' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
