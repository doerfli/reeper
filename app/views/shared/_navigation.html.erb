<div class="section nospacebottom nospacetop">
  <div class="container">
    <nav class="level is-mobile nospacebottom">
      <!-- Left side -->
      <div class="level-left">
        <div class="level-item">
          <div class="field">
            <p class="control has-icons-left">
              <%= text_field_tag :search, nil, class: 'input', placeholder: t('nav.search') %>
              <span class="icon is-small is-left">
                <i class="fas fa-search"></i>
              </span>
            </p>
          </div>
        </div>
      </div>

      <!-- Right side -->
      <div class="level-right">
        <div class="level-item">
          <div class="field">
            <a class="button is-primary" href="<%= recipes_path %>">
              <span class="icon is-small">
                <i class="fas fa-list-ul"></i>
              </span>
            </a>
          </div>
        </div>
        <div class="level-item">
          <div class="field">
            <a class="button is-primary" href="<%= new_recipe_path %>">
              <span class="icon is-small">
                <i class="fas fa-plus-square"></i>
              </span>
            </a>
          </div>
        </div>
      </div>
    </nav>
  </div>
</div>
