FROM ruby:3.1.0-alpine as assetsbuilder

RUN apk update && apk upgrade && \
    apk add --update nodejs yarn build-base libxml2-dev tzdata postgresql-dev && \
    rm -rf /var/cache/apk/*

ENV HOME /app
ENV RAILS_ENV production
ENV RAILS_SERVE_STATIC_FILES true
ENV SECRET_KEY_BASE abcdefgh12345678

WORKDIR $HOME

# Install gems
ADD .ruby-version $HOME/
ADD Gemfile* $HOME/
RUN gem update bundler
# # speed up install of nokogiri gem
RUN bundle config --local build.nokogiri --use-system-libraries
RUN bundle config set without 'development test'
RUN bundle install  --jobs 4

# Add the app code
COPY . $HOME

RUN yarn install
RUN bundle exec rake assets:precompile


FROM ruby:3.0.3-alpine

RUN apk update && apk upgrade && \
    apk add --update nodejs build-base libxml2-dev tzdata imagemagick postgresql-dev && \
    apk add tesseract-ocr tesseract-ocr-dev tesseract-ocr-data-deu leptonica leptonica-dev && \
    rm -rf /var/cache/apk/*

ENV HOME /app
ENV RAILS_ENV production
ENV RAILS_SERVE_STATIC_FILES true
ENV SECRET_KEY_BASE abcdefgh12345678

WORKDIR $HOME

# Install gems
ADD .ruby-version $HOME/
ADD Gemfile* $HOME/
RUN gem update bundler
# speed up install of nokogiri gem
RUN bundle config --local build.nokogiri --use-system-libraries
RUN bundle config set without 'development test'
RUN bundle install  --jobs 4

# Add the app code
COPY . $HOME

COPY --from=assetsbuilder /app/public/assets/ public/assets/
COPY --from=assetsbuilder /app/public/packs/ public/packs/
